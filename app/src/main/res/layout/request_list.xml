<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:padding="5dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageDelete"
        android:src="@drawable/delete"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginRight="10dp" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginRight="5dp">
        <com.loopj.android.image.SmartImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/imageUser"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:scaleType="center"
            android:src="@drawable/profile_mask" />
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:focusable="false"
        android:layout_marginRight="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textTitle"
            android:text="Hello world"
            android:textSize="14sp"
            android:textColor="#000"
            android:textStyle="bold" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textMessage"
                android:text="Hi,\nI'm just reviewing your request and will be back to you shortly. My name is john and I work for iNeed."
                android:textSize="12sp"
                android:maxLines="4"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.github.curioustechizen.ago.RelativeTimeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDate"
            android:textSize="12sp"
            android:textColor="#AAA"
            android:focusable="false"
            android:layout_gravity="right" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textStatus"
            android:text="Active"
            android:textSize="12sp"
            android:background="@drawable/green_request_button"
            android:textColor="#74c391"
            android:layout_gravity="right"
            android:layout_marginTop="5dp" />
    </LinearLayout>
</LinearLayout>